<Page x:Class="Squidphotos.Pages.ViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Squidphotos"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewerPage">

    <Grid>
        <Grid>
            <Image x:Name="BackgroundImage" Panel.ZIndex="0" Stretch="UniformToFill">
                <Image.Effect>
                    <BlurEffect Radius="30" KernelType="Gaussian"/>
                </Image.Effect>
            </Image>
            <Rectangle x:Name="OverlayRectangle" Panel.ZIndex="1" Opacity="0.55" Fill="{StaticResource ForegroundColor}"/>

            <local:ZoomBorder x:Name="ContentBorder" Margin="50" Panel.ZIndex="2">
                <Image x:Name="ForegroundImage" RenderOptions.BitmapScalingMode="HighQuality" Panel.ZIndex="2">
                </Image>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="3" ShadowDepth="10"/>
                </Border.Effect>
            </local:ZoomBorder>

        </Grid>
    </Grid>
</Page>
